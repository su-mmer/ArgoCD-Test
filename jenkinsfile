node {
  stage('========== Clone repository ==========') {
    checkout scm
  }
  stage('========== Build image ==========') {
    app = docker.build("summer99summer/nginx-argo")
  }
  stage('========== Push image ==========') {
    docker.withRegistry('https://registry.hub.docker.com', 'dockerhubtoken') { # Jenkins Credential 정보
      app.push("${env.BUILD_NUMBER}") 
      app.push("latest") 
    }
  }
}
