podTemplate(label: 'docker-build', 
  containers: [
    containerTemplate(
      name: 'git',
      image: 'alpine/git',
      command: 'cat',
      ttyEnabled: true
    ),
    containerTemplate(
      name: 'docker',
      image: 'docker',
      command: 'cat',
      ttyEnabled: true
    ),
  ],
  volumes: [ 
    hostPathVolume(mountPath: '/var/run/docker.sock', hostPath: '/var/run/docker.sock'), 
  ]
) {
    node('docker-build') {
        def dockerHubCred = 'dockerhubtoken'
        def appImage
        environment {
           RELEASE_NOTES = sh (script: """git log --format="medium" -1 ${GIT_COMMIT}""", returnStdout:true)
        }

        stage('Checkout'){
            container('git'){
                checkout scm
                script {
                  sh "$RELEASE_NOTES"
                }
            }
        }
        
        stage('Build'){
            container('docker'){
                script {
                    appImage = docker.build("summer99summer/nginx-argo")
                    
                }
            }
        }

        stage('Push'){
            container('docker'){
                script {
                    docker.withRegistry('https://registry.hub.docker.com', dockerHubCred){
                        appImage.push("${env.GIT_COMMIT}")
                        appImage.push("latest")
                    }
                }
            }
        }
    }
    
}
