podTemplate(label: 'docker-build', 
  containers: [
    containerTemplate(
      name: 'git',
      image: 'alpine/git',
      command: 'cat',
      ttyEnabled: true
    ),
    containerTemplate(
      name: 'docker',
      image: 'docker',
      command: 'cat',
      ttyEnabled: true
    ),
  ],
  volumes: [ 
    hostPathVolume(mountPath: '/var/run/docker.sock', hostPath: '/var/run/docker.sock'), 
  ]
) {
    node('docker-build') {
        def dockerHubCred = 'dockerhubtoken'
        def appImage
        def SCM_VARS

        stage('Checkout'){
            container('git'){
                checkout scm
                SCM_VARS = git branch: 'main', url: 'https://github.com/su-mmer.ArgoCD-Test.git'
            }
        }
        
        stage('Build'){
            container('docker'){
                script {
                    appImage = docker.build("summer99summer/nginx-argo")
                    
                }
            }
        }

        stage('Push'){
            container('docker'){
                script {
                    docker.withRegistry('https://registry.hub.docker.com', dockerHubCred){
                        appImage.push(${SCM_VARS.GIT_COMMIT})
                        appImage.push("latest")
                    }
                }
            }
        }
    }
    
}
